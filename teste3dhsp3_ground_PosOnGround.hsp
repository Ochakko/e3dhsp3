	E3DSetDir hsid2, degx2, degy2, degz2
	frameno2 = 0

	E3DSetProgressBar 70
	

	E3DLoadGroundBMP pathbuf.0, pathbuf.1, pathbuf.2, pathbuf.3, mapsize, mapsize, mapdiv, mapdiv, mapheight, hsid3
